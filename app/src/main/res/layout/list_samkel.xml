<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0.5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#F8F8FF"
        android:layout_marginTop="30dp"
        android:outlineAmbientShadowColor="@color/black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNamaUPTD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota Padang"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLokasiUPTD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNamaUPTD"
            android:text="Kecamatan :"
            android:textAppearance="@style/Base.CardView"
            android:textColor="#000"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Tanggal        :"
            android:textAppearance="@style/Base.CardView"
            android:textColor="#000"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/Jadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Jadwal         :"
            android:textAppearance="@style/Base.CardView"
            android:textColor="#000"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLokasiUPTD"
            android:text="Lokasi           :"
            android:textAppearance="@style/Base.CardView"
            android:textColor="#000"
            android:textSize="13sp"
            />




    </LinearLayout>

</androidx.cardview.widget.CardView>