            <TextView
                android:id="@+id/info_10"
                android:text="PERATURAN PEMERINTAH REPUBLIK INDONESIA NOMOR 22 TAHUN 2014 TENTANG BARANG KENA PAJAK YANG TERGOLONG MEWAH BERUPA KENDARAAN BERMOTOR YANG DIKENAI PAJAK PENJUALAN ATAS BARANG MEWAH"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            app:cardElevation="3dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card11"
            android:layout_below="@+id/card10"
            app:cardBackgroundColor="#F8F8FF"
        >

