<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

android:background="@color/white"
    tools:context=".info.Peraturan.PeraturanpajakActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0.5dp"
        android:id="@+id/rvl"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="424dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/banner3"
            android:id="@+id/head"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
            android:layout_below="@id/head"
            android:gravity="center"
            android:singleLine="true"
            android:padding="15dp"
            android:ellipsize="marquee"
            android:text="Selamat Datang di Layanan Informasi Peraturan Pajak"
            android:fontFamily="@font/caviardreamsbold"
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/txtperaturan"
            />
        <View
            android:layout_width="450dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_below="@id/txtperaturan"

            android:background="@color/black"
            android:id="@+id/view"
            />
    </RelativeLayout>





<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@+id/rvl"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
