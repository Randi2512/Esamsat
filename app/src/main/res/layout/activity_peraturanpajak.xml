            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card12"
            android:layout_below="@+id/card11"
            app:cardBackgroundColor="#F8F8FF"
            >

            <TextView
                android:id="@+id/info_12"
                android:text="UNDANG-UNDANG REPUBLIK INDONESIA NOMOR 28 TAHUN 2009 TENTANG PAJAK DAERAH DAN RETRIBUSI DAERA"
