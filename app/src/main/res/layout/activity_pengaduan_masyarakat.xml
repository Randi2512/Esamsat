<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".info.PengaduanMasyarakat">
        <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center" android:layout_centerHorizontal="true"
        android:background="@drawable/pengaduan"
        android:id="@+id/head"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/head"
            android:text="Layanan Pengaduan Masyarakat"
            android:fontFamily="sans-serif-black"
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/txt"
            />
        <View
            android:layout_width="450dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_below="@id/txt"
            android:layout_marginTop="11dp"
            android:background="@color/black"
            android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt"/>
        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:text="Plat Nomor Kendraan"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:boxStrokeColor="@color/teal_200"
            android:layout_centerHorizontal="true"
            app:boxBackgroundColor="@color/teal_200"
            android:layout_below="@+id/txt">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nomor"
                android:textStyle=""
                android:layout_marginTop="30dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly1"
            android:id="@+id/namapemilik"
            android:text="Nama"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:boxStrokeColor="@color/teal_200"
            android:layout_centerHorizontal="true"
            app:boxBackgroundColor="@color/teal_200"
            android:layout_below="@+id/namapemilik">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nama1"
                android:layout_marginTop="30dp"
                 />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly2"
            android:id="@+id/namauptd"
            android:text="UPTD Transaksi"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:boxStrokeColor="@color/teal_200"
            android:layout_centerHorizontal="true"
            app:boxBackgroundColor="@color/teal_200"
            android:layout_below="@+id/namauptd">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtUPTD"
                android:layout_marginTop="30dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly3"
            android:id="@+id/paymentPoint"
            android:text="Payment Point"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly4"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/teal_200"
            android:layout_centerHorizontal="true"
            app:boxBackgroundColor="@color/teal_200"
            android:layout_below="@+id/paymentPoint">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtpayment"
                android:layout_marginTop="30dp"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly4"
            android:id="@+id/tglTrans"
            android:text="Tanggal Transaksi"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/teal_200"
            android:layout_centerHorizontal="true"
            app:boxBackgroundColor="@color/teal_200"
            android:layout_below="@+id/tglTrans">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtTgl"
                android:layout_marginTop="30dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly5"
            android:id="@+id/email"
            android:text="Email / Telepon"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ly6"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/teal_200"
            android:layout_centerHorizontal="true"
            app:boxBackgroundColor="@color/teal_200"
            android:layout_below="@+id/email">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtemail"
                android:layout_marginTop="30dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly6"
            android:id="@+id/kategori"
            android:text="Kategori"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <Spinner
            android:id="@+id/listItem"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/kategori"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@color/teal_200"
            android:entries="@array/layanan"
            android:padding="15dp">
        </Spinner>

        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/listItem"
            android:id="@+id/Pelayanan"
            android:text="Pelayanan :"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <CheckBox
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Pelayanan"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:text="Pelayanan Front Office/Informasi/Pemandu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />

        <CheckBox
            android:id="@+id/c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c1"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan Pendaftaran"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />
        <CheckBox
            android:id="@+id/c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c2"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan Cek Fisik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />
        <CheckBox
            android:id="@+id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c3"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan Blokir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />
        <CheckBox
            android:id="@+id/c5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c4"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan lama dan berbelit-belit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />
        <CheckBox
            android:id="@+id/c6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c5"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan Progresif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />
        <CheckBox
            android:id="@+id/c7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c6"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan Bank Nagari"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />

        <CheckBox
            android:id="@+id/c8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c7"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan Bank Negara Indonesia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />

        <CheckBox
            android:id="@+id/c9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c8"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan Penyerahan Berkas/STNK"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />
        <CheckBox
            android:id="@+id/c10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c9"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan Pengaduan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />

        <CheckBox
            android:id="@+id/c11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c10"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pelayanan Lainnya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pelayanan" />

        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/c11"
            android:id="@+id/Sapras"
            android:text="Sarana Dan Prasarana :"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <CheckBox
            android:id="@+id/ch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sapras"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Gedung"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sapras" />

        <CheckBox
            android:id="@+id/ch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ch1"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Tempat Duduk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sapras" />
        <CheckBox
            android:id="@+id/ch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ch2"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Pendingin Ruangan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sapras" />
        <CheckBox
        android:id="@+id/ch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ch3"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:text="Toilet/WC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sapras" />
        <CheckBox
            android:id="@+id/ch5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ch4"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Parkir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sapras" />

        <CheckBox
            android:id="@+id/ch6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ch5"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Ruang Laktasi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sapras" />

        <CheckBox
            android:id="@+id/ch7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ch6"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Kantin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sapras" />
        <CheckBox
            android:id="@+id/ch8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ch7"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="Sarana Dan Prasarana Lainnya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sapras" />


        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/ch8"
            android:id="@+id/regulasi"
            android:text="Regulasi"
            android:textStyle="bold"
            android:textColor="@color/black"
            />


        <CheckBox
            android:id="@+id/chk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regulasi"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:text="Regident Ranmor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regulasi" />
        <CheckBox
            android:id="@+id/chk2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chk1"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:text="Pajak Kendaraan Bermotor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regulasi" />

        <CheckBox
            android:id="@+id/chk3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chk2"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:text="Bea Balik Nama Kendaraan Bermotor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regulasi" />

        <CheckBox
            android:id="@+id/chk4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chk3"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:text="SOP Pelayanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regulasi" />


        <CheckBox
            android:id="@+id/chk5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chk4"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:text="SOP Pengaduan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regulasi" />

        <CheckBox
        android:id="@+id/chk6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chk5"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="13dp"
        android:text="Regulasi Lainnya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regulasi" />


        <TextView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/chk6"
            android:text="Keluhan"
            android:id="@+id/txtkeluhan"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lykeluh"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/teal_200"
            android:layout_centerHorizontal="true"
            app:boxBackgroundColor="@color/teal_200"
            android:layout_below="@+id/txtkeluhan">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keluhan"
                android:textStyle=""
                android:layout_marginTop="30dp"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/lykeluh"
            android:id="@+id/btnSubmit"
            android:text="Submit "
            />












    </RelativeLayout>
</ScrollView>
