<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.MONITOR.Monitoring">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_marginTop="-5dp"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="424dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/banner3"
            android:id="@+id/head"
            />
        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_time"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="#896EFB"
            android:paddingTop="5dp"
            android:drawableLeft="@drawable/time"

            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/head"
            android:layout_marginTop="10dp"
            android:text="kamis, 20 juni 2020"/>

        <com.github.mikephil.charting.charts.PieChart

            android:layout_marginTop="30dp"
            android:id="@+id/pieChart"
            android:layout_below="@id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>
    <!--    #9A5FFD-->
    <!--    #5D95F8-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav_bacground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_nav"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:elevation="8dp"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@drawable/nav_color_selector"/>















</RelativeLayout>